<% layout('./layouts/boilerplate') -%>

<div class="row justify-content-center align-items-center vh-50">
  <div class="col-md-6 col-lg-5 shadow p-4 rounded-4 bg-white">
    <h2 class="text-center mb-4 text-primary">Login to Bookmynest</h2>
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="loginUsername" class="form-label">Username</label>
        <input type="text" class="form-control" id="loginUsername" name="username" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Username is required.</div>
      </div>

      <div class="mb-3">
        <label for="loginPassword" class="form-label">Password</label>
        <input type="password" class="form-control" id="loginPassword" name="password" required>
        <div class="invalid-feedback">Password is required.</div>
      </div>

      <div class="d-grid">
       <button type="submit" class="btn bookmynest-btn w-100">
  <i class="fa-solid fa-right-to-bracket me-2"></i> Login
</button>
      </div>
    </form>
    <p class="text-center mt-3">Don't have an account? <a class="text-decoration-none" href="/signup">Sign up</a></p>
  </div>
</div>
